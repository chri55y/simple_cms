
<table summary="Section form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>

  <tr>
    <th>Page ID</th>
    <td><%= f.select(:page_id, @pages.map{|p| [p.name,p.id] }) %></td>
  </tr>

  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box(:visible) %></td>
  </tr>

</table>